<div id="company_container">
	<div id="companies">
		<%= simple_form_for(@company) do |f| %>
		  <%= f.error_notification %>

		  <div class="form-inputs">
		    <%= f.input :company, placeholder: 'company name', label: false %>
		  </div>

		  <div class="form-actions" style="display: none">
		    <%= f.button :submit %>
		  </div>
		<% end %>
	</div>
</div>