<div id="approvals_container" style="display: none">
	<div id="approvals">
		<%= simple_form_for(@approval) do |f| %>
		  <%= f.error_notification %>

		  <div class="form-inputs">
		    <%= f.input :names, placeholder: 'names of those to approve', label: false %>
		    <%= f.input :by_date %>
		    <%= f.text_area :description, label: false, placeholder:'Notes' %>
		  </div>

		  <div class="form-actions" style="display: none">
		    <%= f.button :submit %>
		  </div>
		<% end %>
	</div>
</div>