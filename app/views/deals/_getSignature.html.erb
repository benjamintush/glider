<div id="getSignature_container" style="display: none">
	<div id="getSignature">
		<%= simple_form_for(@get_signature) do |f| %>
		  <%= f.error_notification %>

		  <div class="form-inputs">
		    <%= f.input :from, placeholder: 'get Signature from?'%>
		    <%= f.input :by_date %>
		  </div>

		  <div class="form-actions" style="display:none">
		    <%= f.button :submit %>
		  </div>
		<% end %>
	</div>
</div>